#!/usr/bin/env perl

use warnings;
use strict;

use feature qw(say);

use FindBin qw($Bin);
use lib "$Bin/../lib";

use File::Path qw(make_path);
#use File::Copy;
use Template;
use JSON;
use Getopt::Long;
#use Data::Dumper;

my %PARAMS = ();
GetOptions(\%PARAMS, 'help');

unless (@ARGV) {
    usage();
    exit;
}

if ($PARAMS{help}) {
	exec("perldoc $0");
}


sub usage {
	say <<USAGE;

glyph-add-service --help

USAGE
}

=head1 NAME

glyph-add-service

=head1 SYNOPSIS

Create a new Glyph service

=head1 DESCRIPTION

=head1 PARAMS

=over

=item B<foo>

=back

